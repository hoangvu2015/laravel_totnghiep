							<div class="item active">
						<?php else: ?> 
							<div class="item">
						<?php endif; ?>
								<img class="image-carousel-detail" src="/image/<?php echo e($key->image); ?>" alt="Chania">
								<div class="carousel-caption">
							        <h3><a class="a-left" href="<?php echo e(route('index.showproduct',$key->id)); ?>"><?php echo e($key->name); ?></a></h3>
